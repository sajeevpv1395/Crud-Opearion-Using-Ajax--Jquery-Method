@model IEnumerable<User>
@{
    ViewData["Title"] = "Index";
}



<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
		</div>
        <div class="col-6 text-end">
            <a asp-controller="User" asp-action="Create" class="btn btn-primary">
               <i class="bi bi-plus-circle"></i> &nbsp; Create New Category
			</a>
		</div>
	</div>
    <br /><br />

<table class="table table-bordered table-striped" style="width:100%" id="dataTableData">
    <thead>
        <tr>
             <th>
                Id
			</th>
            <th>
                Name
			</th>
            <th>
                Place
			</th>
             <th>
                Email
			</th>
             <th>
                PhoneNumber
			</th>
            <th></th>
		</tr>
	</thead>
    <tbody>

        @foreach(var obj in Model)
        {
            <tr><td width="20%">
                    @obj.Id
				</td>
                <td width="20%">
                    @obj.Name
				</td>
                <td width="20%">
                    @obj.Place
				</td>
                 <td width="20%">
                    @obj.Email
				</td>
                 <td width="20%">
                    @obj.PhoneNumber
				</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="User" asp-action="Edit" asp-route-id="@obj.Id"
                        class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                        <a asp-controller="User" asp-action="Delete" asp-route-id="@obj.Id"
                        class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
					</div>
				</td>
			</tr>
        }

    </tbody>

</table>
</div>


 
   @section scripts{
 <script src="~/js/datatable.js" asp-append-version="true"></script>
   }
